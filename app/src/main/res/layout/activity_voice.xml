<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#acacac"
    tools:context=".VoiceSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="70dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2.5" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="ajustess"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_weight="15"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06" />


        <Button
            android:id="@+id/cambiarVoz"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="ChangeVoice"
            android:text="cbiar vo"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_weight="15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.035" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2.5" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#5218fa"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_weight="15"
            android:weightSum="4.4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.201">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <TextView
                android:id="@+id/velocidad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/white"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/suma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#a4c639"
                android:onClick="increaseSpeed"
                android:text="+"
                android:textSize="40sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <Button
                android:id="@+id/resta"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#cd4b33"
                android:onClick="decreaseSpeed"
                android:text="-"
                android:textSize="40sp" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2.5" />

        <TextView
            android:id="@+id/cambiarTono"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Tono"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="#5218fa"
            android:layout_weight="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:background="#5218fa"
            android:orientation="horizontal"
            android:weightSum="2.3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.582">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.1" />


            <Button
                android:id="@+id/masAgudo"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#ffa07a"
                android:onClick="Aguda"
                android:text=""
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.1" />


            <Button
                android:id="@+id/masGrave"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#87cefa"
                android:onClick="Grave"
                android:text=""
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2.5" />

        <CheckBox
            android:id="@+id/asistente"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="Assistant"
            android:text=""
            android:textSize="24sp"
            android:layout_weight="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.821" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>